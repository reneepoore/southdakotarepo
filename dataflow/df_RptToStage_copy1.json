{
	"name": "df_RptToStage_copy1",
	"properties": {
		"folder": {
			"name": "Staging"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_DataSetSource",
						"type": "DatasetReference"
					},
					"name": "RptDB"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_DataSetSourceTarget",
						"type": "DatasetReference"
					},
					"name": "StgDB"
				},
				{
					"dataset": {
						"referenceName": "CODETABLEITEM",
						"type": "DatasetReference"
					},
					"name": "StgCodeTableItem"
				}
			],
			"transformations": [
				{
					"name": "Upsert"
				},
				{
					"name": "CheckTableNameforCodeTableItem"
				},
				{
					"name": "UpsertCodeTableItem"
				}
			],
			"scriptLines": [
				"parameters{",
				"     TableName as string,",
				"     SchemaName as string,",
				"     UniqueID as string,",
				"     ORDPosition as integer",
				"}",
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     waterMarkColumn: 'LastWritten',",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table',",
				"     mode: 'read') ~> RptDB",
				"CheckTableNameforCodeTableItem@NotCodeTableItem alterRow(upsertIf(true())) ~> Upsert",
				"RptDB split($ORDPosition<=1,",
				"     disjoint: false) ~> CheckTableNameforCodeTableItem@(NotCodeTableItem, CodeTableItemTable)",
				"CheckTableNameforCodeTableItem@CodeTableItemTable alterRow(upsertIf(true())) ~> UpsertCodeTableItem",
				"Upsert sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:false,",
				"     updateable:false,",
				"     upsertable:true,",
				"     keys:[($UniqueID)],",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> StgDB",
				"UpsertCodeTableItem sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:false,",
				"     updateable:false,",
				"     upsertable:true,",
				"     keys:[('TABLENAME'),('CODE'),('LOCALEIDENTIFIER')],",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> StgCodeTableItem"
			]
		}
	}
}