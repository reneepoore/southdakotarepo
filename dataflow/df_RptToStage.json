{
	"name": "df_RptToStage",
	"properties": {
		"folder": {
			"name": "Staging"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_DataSetSource",
						"type": "DatasetReference"
					},
					"name": "RptDB"
				},
				{
					"name": "source1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_DataSetSourceTarget",
						"type": "DatasetReference"
					},
					"name": "StgDB"
				}
			],
			"transformations": [
				{
					"name": "alterRow1"
				}
			],
			"scriptLines": [
				"parameters{",
				"     TableName as string,",
				"     SchemaName as string",
				"}",
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     waterMarkColumn: 'LastWritten',",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table',",
				"     mode: 'read') ~> RptDB",
				"source(allowSchemaDrift: true,",
				"     validateSchema: false) ~> source1",
				"RptDB alterRow(upsertIf(true())) ~> alterRow1",
				"alterRow1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:false,",
				"     updateable:false,",
				"     upsertable:true,",
				"     keys:[(concat($TableName, 'ID'))],",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> StgDB"
			]
		}
	}
}