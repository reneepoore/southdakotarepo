{
	"name": "df_RptToStage",
	"properties": {
		"folder": {
			"name": "Staging"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_DataSetSource",
						"type": "DatasetReference"
					},
					"name": "RptDB"
				},
				{
					"dataset": {
						"referenceName": "TablePrimaryKeys",
						"type": "DatasetReference"
					},
					"name": "TablePrimaryKeys"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_DataSetSourceTarget",
						"type": "DatasetReference"
					},
					"name": "StgDB"
				}
			],
			"transformations": [
				{
					"name": "alterRow1"
				},
				{
					"name": "CreateIDColumn"
				},
				{
					"name": "JoinTableNames"
				}
			],
			"scriptLines": [
				"parameters{",
				"     TableName as string,",
				"     SchemaName as string",
				"}",
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     waterMarkColumn: 'LastWritten',",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table',",
				"     mode: 'read') ~> RptDB",
				"source(allowSchemaDrift: false,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> TablePrimaryKeys",
				"CreateIDColumn alterRow(upsertIf(true())) ~> alterRow1",
				"JoinTableNames derive(TableNameID = concat($TableName, 'ID')) ~> CreateIDColumn",
				"RptDB, TablePrimaryKeys join(ERROR_FUNCTION('') == ERROR_FUNCTION(''),",
				"     joinType:'left',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> JoinTableNames",
				"alterRow1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:false,",
				"     updateable:false,",
				"     upsertable:true,",
				"     keys:[(concat($TableName, 'ID'))],",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> StgDB"
			]
		}
	}
}